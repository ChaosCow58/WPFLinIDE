<UserControl x:Class="WPFLinIDE01.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFLinIDE01"
             mc:Ignorable="d" 
             Height="450" Width="500" Background="Gray">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Open Project" FontSize="17" FontWeight="SemiBold" Height="70" Width="190" Margin="10" Click="btOpen_Click"/>
            <Button Content="Create a New Project" FontSize="17" FontWeight="SemiBold" Height="70" Width="190" Click="btNewProject_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
