<Window x:Class="WPFLinIDE01.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLinIDE01"
        mc:Ignorable="d"
        Title="Create/Open a Project" Height="450" Width="500" Background="Gray" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Open Project" FontSize="17" FontWeight="SemiBold" Height="70" Width="190" Margin="10" Click="btOpen_Click"/>
            <Button Content="Create a New Project" FontSize="17" FontWeight="SemiBold" Height="70" Width="190" Click="btNewProject_Click"/>
        </StackPanel>
    </Grid>
</Window>
